install:
	go install -v ./cmd/...

update:
	go get -u -d -v ./...
	go mod tidy -v

test:
	go vet ./...
	go test -coverprofile cover.out ./...
	golangci-lint run --fix ./...

add_test:
	git ls-files | grep '.*\.go$$' | grep -v "_test\.go$$" | while read -r f; do gotests -w -parallel -exported $$f; done
